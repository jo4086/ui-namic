{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false, 
        "emitDeclarationOnly": false,
        "strict": false, 
        "skipLibCheck": true,
        "allowJs": true, 
        "checkJs": false,
        "outDir": "./dist",
        "baseUrl": ".",
    },
    "include": ["./"],
    "exclude": ["node_modules", "dist"]
}
