{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDeclarationOnly": false,
        "strict": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "baseUrl": "."
    },
    "include": ["./"],
    "exclude": ["node_modules", "dist"]
}
